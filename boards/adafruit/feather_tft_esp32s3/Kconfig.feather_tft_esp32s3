	select SOC_ESP32S3_PROCPU if BOARD_FEATHER_TFT_ESP32S3_ESP32S3_PROCPU
	select SOC_ESP32S3_APPCPU if BOARD_FEATHER_TFT_ESP32S3_ESP32S3_APPCPU
